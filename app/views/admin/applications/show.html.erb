<div id="show_data" >
  <p><%= "Name: #{@application.name}" %></p>
  <p><%= "Street Address: #{@application.street_address}" %></p>
  <p><%= "City: #{@application.city}" %></p>
  <p><%= "State: #{@application.state}" %></p>
  <p><%= "Zip Code: #{@application.zip_code}" %></p>
  <p><%= "Description: #{@application.description}" %></p>
  <p><%= "Pets Applied for:" %></p>
  <% @application.pets.each do |pet| %>
    <div id="<%= pet.id %>">
    <%= link_to "#{pet.name}", "/pets/#{pet.id}" %>
    <%= button_to "Approve", "/pet_applications/?application_id=#{@application.id}&pet_id=#{pet.id}status=Approved", method: :patch%>
    <%= button_to "Reject", "/pet_applications/?application_id=#{@application.id}&pet_id=#{pet.id}&status=Rejected", method: :patch%>
    </div>
    <br>
  <% end %>
  <p><%= "Application Status: #{@application.status}" %></p>
    <% if @application.bid_reason.present? %>
      <p><%= "good owner for these pet(s) because: #{@application.bid_reason}" %></p>
    <% end %>
</div>




